    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 3001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}", // Maps C:\Users\user1\project1
                    "remoteRoot": "." // To current working directory ~/project1
                }
            ]
        }
    ]
}